@import "~normalize.css"
@import "~vue-material/dist/vue-material.min.css"
@import url('https://fonts.googleapis.com/css?family=Share+Tech')
@import url('https://fonts.googleapis.com/css?family=Work+Sans')

@tailwind preflight;

// Import hier custom stylus code
primary-color = rgba(156,232,145,1)
secondary-color = rgba(237,184,120,1)

accent-color-one = rgba(139,199,221,1)
accent-color-two = rgba(228,133,117,1)
default-color-one = rgba(251,247,239,1)

.accent-one
  background-color accent-color-one

.accent-two
  background-color accent-color-two

.primary-color
  background-color primary-color

.secondary-color
  background-color secondary-color

body
  font-family Work Sans, sans-serif

h1,h2,h3,h4,h5,h6
  font-family Share Tech, sans-serif

#head,#qr-text
    z-index:1000
    vertical-align:middle
    text-align:center
    font-size:40px
    display:flex
    align-items: center
    flex-direction: column
    justify-content: center
    height:150px
    color:accent-color-one



.md-layout-item {
    height: 300px;
    margin-top:20px

    &:after {
      width: 100%;
      height: 100%;
      display: block;
      content: " ";
    }

    &.md-layout {
      &:after {
        transform: translateY(-100%);
      }

      .md-layout-item:after {
        height: 89%;
        margin-top: 16px;
        position: relative;
        z-index: 1;
      }
    }
  }

#logo
    display:block
    width:7%
    height:auto
    margin:auto

#qr
    display:block
    width:70%
    height:auto
    margin: auto

@tailwind utilities;
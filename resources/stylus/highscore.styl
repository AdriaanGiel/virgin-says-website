.highscore
  height 120vh
  background-color accent-color-one
  transform-origin left bottom
  //transform skewY(3deg)
  z-index -2
  position relative
  top -200px



.highscore-box
  position relative
  height 50%
  width 500px
  background-color white
  transform skewY(0deg)
  padding 0 1em
  h3
    width 100%
    text-align center
  .highscore-item-content
    width 100%
    height 100%
    highscore-items
      width 75%
      height  75%

@media $smartPhone
  .highscore-box
    width 95%
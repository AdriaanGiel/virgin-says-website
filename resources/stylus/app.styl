@import "~normalize.css"
@import "~html5-device-mockups"
@import "~vue-material/dist/vue-material.css"
@import url('https://fonts.googleapis.com/css?family=Share+Tech')
@import url('https://fonts.googleapis.com/css?family=Work+Sans')

//@tailwind preflight;

// Import hier custom stylus code
primary-color = rgba(156,232,145,1)
secondary-color = rgba(237,184,120,1)

accent-color-one = rgba(139,199,221,1)
accent-color-two = rgba(228,133,117,1)

smartPhoneWidth = 741px;
$smartPhone = "only screen and (max-width: "+ smartPhoneWidth +")"

.accent-one
  background-color accent-color-one

.accent-two
  background-color accent-color-two

.primary-color
  background-color primary-color

.secondary-color
  background-color secondary-color

body
  font-family Work Sans, sans-serif
  background-color #f1f4f6

h1,h2,h3,h4,h5,h6
  font-family Share Tech, sans-serif

.flex
  display flex

.flex-center
  justify-content center
  align-items center

.horizontal-flex
  justify-content center

.flex-row
  flex-direction row

.flex-column
  flex-direction column

.v-footer
  height 40vh
  background-color grey
  position relative

.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
}

.custom-card
  background-color white
  text-align center


